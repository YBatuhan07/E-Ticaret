@model IEnumerable<ETicaretCore.Entities.Slider>

@{
    ViewData["Title"] = "Slider";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Ürün Ekle</a>
</p>
<hr />
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a class="img-fluid" href="/img/Slider/@item.Image">
                    <img src="~/img/Slider/@item.Image" height="40" alt="Alternate Text" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-primary" class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
