@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}


<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

</style>

<main class="form-signin w-100 m-auto">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Giriş Bilgileri</th>
                <th scope="col">Email</th>
                <th scope="col">Şifre</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Satıcı Hesabı</th>
                <td>s@s.com</td>
                <td>s</td>

            </tr>
            <tr>
                <th scope="row">Müşteri</th>
                <td>m@m.com</td>
                <td>m</td>

            </tr>

        </tbody>
    </table>
    <form asp-action="SignIn">
        <h1 class="h3 mb-3 fw-normal"><img class="mb-1" src="/img/Designer (2).png" alt="" height="57">Giriş Yap</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Şifre">
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start my-3">
            <input asp-for="RememberMe" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <input type="hidden"asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
        <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
    </form>
</main>


